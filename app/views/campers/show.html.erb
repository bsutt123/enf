<%= render "camper_navbar" %>

<div class="container">
  <div class="row justify-content-center">
    <%= link_to "Edit Camper", edit_camper_path(@camper), class: 'btn btn-success' %>
    <%= link_to "Delete Camper", @camper, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this camper?"} %>
  </div>

  <h5> Camper </h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Non Swimmer?</th>
        <th>Has a food allergies?</th>
        <th>Has medication(s) </th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td> <%= @camper.name %> </td>
          <td>
            <% if @camper.non_swimmer %>
              <i class="fa fa-check" aria-hidden="true"></i>
            <% end %>
          </td>
          <td>
            <% if @camper.has_food_allergies %>
              <i class="fa fa-check" aria-hidden="true"></i>
            <% end %>
          </td>
          <td>
            <% if @camper.has_medication %>
              <i class="fa fa-check" aria-hidden="true"></i>
            <% end %>
          </td>
        </tr>
    </tbody>
  </table>
</div>
